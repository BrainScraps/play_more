
<% if @movie && !@movie.plot.nil? %>
	<table>
		<tr> 
			<td> 	<strong> Title:</strong> </td>
			<td>  <%= @movie.title %></td>
		</tr>
		<tr> 
			<td> <strong> Rating:</strong></td>
			<td> <%= @movie.rated %> </p></td>
		</tr>
		<tr> 
			<td>	<strong> Director:</strong>  </td>
			<td> <%= @movie.director %> </td>
		</tr>
		<tr> 
			<td> <strong> Plot:</strong>  </td>
			<td> <%= @movie.plot %> </td>
